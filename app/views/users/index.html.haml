.container
  .pull-right
    = link_to "New User", new_user_path, class: "btn btn-info margin-top-button2"
  .page-header
    %h1 Users

  %table.table
    %thead
      %tr
        %th
          Name
        %th{colspan:2}
          Email
    %tbody
      - @users.each do |user|
        %tr
          %td
            %u
              = link_to user.full_name, user_path(user)
          %td
            - if current_user == user || current_user.admin || project_members(current_user, user)
              %u= link_to user.email, user_path(user)
          %td
            .pull-right
              - if current_user == user || current_user.admin
                %u= link_to "Edit", edit_user_path(user)
